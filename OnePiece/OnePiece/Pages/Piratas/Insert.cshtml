@page
@model OnePiece.Pages.Piratas.InsertModel
@{
    var photo = "~/images/" + (Model.pirataNuevo.foto ?? "noimage.jpg");
    var titulo = Model.pirataNuevo.Id > 0 ? "Editar " : "Crear";
}

<h1 align="center">Formulario de inserción</h1>
<form method="post" class="mt-3" enctype="multipart/form-data">
    <input type="hidden" asp-for="pirataNuevo.nombre" />
    <div class="form-group row">
        <label asp-for="pirataNuevo.nombre" class="col-sm-2 col-form-label"> </label>
        <div class="col-sm-10">
            <input asp-for="pirataNuevo.nombre" class="form-control" placeholder="Nombre" />
            <span asp-validation-for="pirataNuevo.nombre" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="pirataNuevo.edad" class="col-sm-2 col-form-label"> </label>
        <div class="col-sm-10">
            <input asp-for="pirataNuevo.edad" class="form-control" placeholder="Edad" />
            <span asp-validation-for="pirataNuevo.edad" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="pirataNuevo.arma" class="col-sm-2 col-form-label"> </label>
        <div class="col-sm-10">
            <input asp-for="pirataNuevo.arma" class="form-control" placeholder="Arma" />
            <span asp-validation-for="pirataNuevo.arma" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="pirataNuevo.tripulacion" class="col-sm-2 col-form-label"> </label>
        <div class="col-sm-10">
            <input asp-for="pirataNuevo.tripulacion" class="form-control" placeholder="Tripulación" />
            <span asp-validation-for="pirataNuevo.tripulacion" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Photo" class="col-sm-2 col-form-label"> </label>
        <div class="col-sm-10">
            <input asp-for="Photo" class="custom-file-input" onchange="lafoto.value=this.value.substring(this.value.lastIndexOf('\\')+1)" />
            <label class="custom-file-label">Click aquí para cambiar foto</label>
        </div>
    </div>
    <div class="form-group row col-sm-4 offset-4">
        <img class="imageThumbail" src="@photo" asp-append-version="true" />
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-page="/Piratas/Index" class="btn btn-primary">Cancel</a>
        </div>
    </div>

</form>

@section Scripts{
    <!--<partial name="_ValidationScriptsPartial" /> <!--Esta linea es para que coja las validaciones en el lado del cliente-->
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {

                var fileName = $(this).val().split("\\").pop();

                $(this).next('.custom-file-label').html(fileName);
            })
        })
    </script>

}
