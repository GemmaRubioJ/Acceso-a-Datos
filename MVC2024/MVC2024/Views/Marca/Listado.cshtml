@model IEnumerable<MVC2024.Models.MarcaModelo>

@{
    ViewData["Title"] = "Listado";
}

<h1>Listado</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Marcas")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                 <a asp-action="Listado" asp-controller="Serie" asp-route-id="@item.ID">@item.NomMarca</a> |
            </td>
        </tr>
}
    </tbody>
</table>
